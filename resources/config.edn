;; resources/config.edn
{:dev
 {:observability
  {:logging {:enabled #or [#env LOGGING_ENABLED false]
             :level #or [#env LOG_LEVEL :info]
             :structured #or [#env LOG_STRUCTURED true]}
   :metrics {:enabled #or [#env METRICS_ENABLED true]}
   :audit {:enabled #or [#env AUDIT_ENABLED true]
           :max-entries #or [#env AUDIT_MAX_ENTRIES 10000]}}}

 :test
 {:observability
  {:logging {:enabled false
             :level :error
             :structured false}
   :metrics {:enabled false}
   :audit {:enabled false
           :max-entries 0}}}

 :prod
 {:observability
  {:logging {:enabled #or [#env LOGGING_ENABLED true]
             :level #or [#env LOG_LEVEL :warn]
             :structured #or [#env LOG_STRUCTURED true]}
   :metrics {:enabled #or [#env METRICS_ENABLED true]}
   :audit {:enabled #or [#env AUDIT_ENABLED true]
           :max-entries #or [#env AUDIT_MAX_ENTRIES 10000]}}}}